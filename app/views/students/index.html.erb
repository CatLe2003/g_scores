<div class="bg-white rounded shadow p-6 mb-6">
  <h2 class="text-xl font-bold mb-4">User Registration</h2>
  <%= form_with url: "/search", method: :post, local: true do %>
    <div class="flex gap-2">
      <%= number_field_tag :registration_number, nil, required: true, placeholder: "Enter registration number", class: "border p-2 rounded w-1/3" %>
      <%= submit_tag "Submit", class: "bg-black text-white px-4 py-2 rounded" %>
    </div>
  <% end %>
</div>

<div class="bg-white rounded shadow p-6">
  <h2 class="text-xl font-bold mb-4">Detailed Scores</h2>
  <% if @student.present? %>
    <table class="table-auto w-full border-collapse">
      <thead>
        <tr class="bg-gray-100">
          <th class="px-4 py-2 text-left">Registration Number</th>
          <th class="px-4 py-2 text-center">Math</th>
          <th class="px-4 py-2 text-center">Literature</th>
          <th class="px-4 py-2 text-center">English</th>
          <th class="px-4 py-2 text-center">Physics</th>
          <th class="px-4 py-2 text-center">Chemistry</th>
          <th class="px-4 py-2 text-center">Biology</th>
          <th class="px-4 py-2 text-center">History</th>
          <th class="px-4 py-2 text-center">Geography</th>
          <th class="px-4 py-2 text-center">Civic Education</th>
        </tr>
      </thead>
      <tbody>
        <tr class="hover:bg-gray-50">
          <td class="px-4 py-2 text-left"><%= @student.registration_number %></td>
          <td class="px-4 py-2 text-center"><%= @student.math %></td>
          <td class="px-4 py-2 text-center"><%= @student.literature %></td>
          <td class="px-4 py-2 text-center"><%= @student.english %></td>
          <td class="px-4 py-2 text-center"><%= @student.physics %></td>
          <td class="px-4 py-2 text-center"><%= @student.chemistry %></td>
          <td class="px-4 py-2 text-center"><%= @student.biology %></td>
          <td class="px-4 py-2 text-center"><%= @student.history %></td>
          <td class="px-4 py-2 text-center"><%= @student.geography %></td>
          <td class="px-4 py-2 text-center"><%= @student.civic_education %></td>
        </tr>
      </tbody>
    </table>

  <% else %>
    <p class="text-gray-500">No record</p>
  <% end %>
</div>
